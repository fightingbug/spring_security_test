<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.spring_security_11_dynamicauthorize.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.example.spring_security_11_dynamicauthorize.entity.User">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="username" column="username" jdbcType="VARCHAR"/>
            <result property="password" column="password" jdbcType="VARCHAR"/>
            <result property="enabled" column="enabled" jdbcType="TINYINT"/>
            <result property="locked" column="locked" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,username,password,
        enabled,locked
    </sql>
    <select id="getByUsername" resultType="com.example.spring_security_11_dynamicauthorize.entity.User">
        select
        <include refid="Base_Column_List"/>
        from user
        where
        username = #{username,jdbcType=VARCHAR}
    </select>

    <select id="getUserRoleByUid" resultType="com.example.spring_security_11_dynamicauthorize.entity.Role">
        select r.*
        from role r,user_role ur
        where ur.uid = #{uid} and ur.rid = r.id;
    </select>
</mapper>
